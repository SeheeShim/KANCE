{
  "firestore": {
    "database": "(default)",
    "location": "europe-west6",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

  "emulators": {
    "singleProjectMode": true
  }
}
